                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:padding="5dp"
                    android:text="@string/lbl_average"
