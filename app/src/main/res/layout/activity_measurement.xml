<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="ca.mcmaster.waterqualitymonitorsuite.MeasurementActivity">

    <!-- Preference Layout, Samples, Sample Size, Average Size, Ecal V -->
    <GridLayout
        android:id="@+id/layoutPrefs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lbl_samp_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"

            android:layout_column="2"
            android:padding="5dp"
            android:text="@string/lbl_SampSize"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/val_samp_size"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/no_val"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@+id/lblSamples"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_avg_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
