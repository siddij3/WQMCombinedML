                android:layout_marginStart="0dp"

                android:layout_marginTop="0dp"
                android:visibility="visible"
                app:backgroundColor="#FFFFFF"
                app:borderColor="#FFFFFF"
                app:borderThickness="0dp"
                app:domainTitle="Time/Sample"
                app:graphBackgroundColor="#FFFFFF"
                app:graphPaddingLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridLayout"
                app:lineLabelRotationBottom="-45"
                app:lineLabelTextSizeBottom="10sp"
                app:lineLabelTextSizeLeft="9sp"
                app:lineLabels="left|bottom"
                app:rangeTitle="@string/lbl_temp"
                app:title=""
                tools:layout_editor_absoluteX="0dp" />

            <com.androidplot.xy.XYPlot
                android:id="@+id/measPlot_pH"
                style="@style/APDefacto.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="0dp"

                android:layout_marginTop="0dp"
                android:visibility="visible"
                app:backgroundColor="#FFFFFF"
                app:borderColor="#FFFFFF"
                app:borderThickness="0dp"
                app:domainTitle="Time/Sample"
                app:graphBackgroundColor="#FFFFFF"
                app:graphPaddingLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridLayout"
